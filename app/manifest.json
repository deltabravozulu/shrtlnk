{
  "manifest_version": 2,
  "name": "shrtlnk",
  "version": "2.0.0",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "declarativeContent"
  ],
  "page_action": {
    "default_icon": {
      "19": "link_19.png",
      "38": "link_38.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "regex.js",
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "description": "Shorter links",

  "author": "Andrew Flynn (https://github.com/andrewflynn)"
}
